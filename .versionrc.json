{
  "noVerify": true,
  "tagPrefix": "versions/",
  "infile": "CHANGELOG.md",
  "releaseCommitMessageFormat": "chore(release): {{currentTag}} [skip ci]",
  "silent": false,
  "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commits/{{hash}}",
  "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}%0D{{currentTag}}",
  "types": [
    { "type": "chore", "section": "Others", "hidden": false },
    { "type": "revert", "section": "Reverts", "hidden": false },
    { "type": "feat", "section": "Features", "hidden": false },
    { "type": "fix", "section": "Bug Fixes", "hidden": false },
    { "type": "improvement", "section": "Feature Improvements", "hidden": false },
    { "type": "docs", "section": "Docs", "hidden": false },
    { "type": "style", "section": "Styling", "hidden": false },
    { "type": "refactor", "section": "Code Refactoring", "hidden": false },
    { "type": "perf", "section": "Performance Improvements", "hidden": false },
    { "type": "test", "section": "Tests", "hidden": false },
    { "type": "build", "section": "Build System", "hidden": false },
    { "type": "ci", "section": "CI", "hidden": false }
  ],
  "bumpFiles": [
    {
      "filename": "package.json",
      "updater": "standard-version-updater.js"
    },
    {
      "filename": "./packages/api/package.json",
      "updater": "standard-version-updater.js"
    },
    {
      "filename": "./packages/graphql-request/package.json",
      "updater": "standard-version-updater.js"
    },
    {
      "filename": "./packages/operation/package.json",
      "updater": "standard-version-updater.js"
    },
    {
      "filename": "./packages/react-hooks/package.json",
      "updater": "standard-version-updater.js"
    },
    {
      "filename": "./packages/schema/package.json",
      "updater": "standard-version-updater.js"
    }
  ]
}
